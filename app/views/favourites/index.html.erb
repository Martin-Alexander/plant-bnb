<h1>Your Favourites</h1>

<% @favourites.each do |favourite| %>
  <%= cl_image_tag favourite.plant.cover_photo.key, width: 200, height: 113, crop: :fill %>
  <p><%= favourite.plant.title %></p>
  <p>Favourited on <%= favourite.created_at.strftime("%b %e, %Y") %></p>
  <p><%= link_to "Remove", favourite_path(favourite), method: :delete %></p>
<% end %>